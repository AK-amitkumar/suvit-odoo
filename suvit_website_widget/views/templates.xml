<odoo>
    <data>
        <template id="index">
            <t t-call="website.layout">
                <t t-set="title">Odoo Виджеты</t>
                <div class="oe_structure">
                    <div class="container">
                        <t t-foreach="widget_groups" t-as="w_group">
                            <div class="col-md-3">
                                <div class="row">
                                    <h2><t t-esc="w_group.name"/></h2>
                                </div>
                                <t t-foreach="w_group.widget_ids" t-as="w_id">
                                    <div class="row">
                                        <p><a t-attf-href="/suvit_website_widget/{{ slug(w_id) }}">
                                            <t t-esc="w_id.name"/></a></p>
                                    </div>
                                </t>
                            </div>
                        </t>
                    </div>
                </div>
            </t>
        </template>
        <template id="widget_page">
            <t t-call="website.layout">
                <t t-set="title">Виджет <t t-esc="widget.name"/></t>
                <div class="oe_structure">
                    <div class="container">
                        <h2><t t-esc="widget.name"/></h2>
                        <div class="row">
                            <div class="col-md-1">
                                <t t-foreach="widget.features_ids" t-as="feature_id">
                                    <p><b><t t-esc="feature_id.name"/></b></p>
                                </t>
                            </div>
                            <div class="col-md-4">
                                <p><t t-esc="widget.text"></t></p>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
